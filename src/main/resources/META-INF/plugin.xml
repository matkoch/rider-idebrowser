<idea-plugin>
  <id>dev.matkoch.ideBrowser</id>
  <name>IDE Browser</name>
  <depends>com.intellij.modules.platform</depends>
  <description>
    <![CDATA[
      Provides a simple browser tool window in your IDE.
    ]]>
  </description>
  <change-notes>
    <![CDATA[
      <ul>
        <li><b>1.2.1</b> Fixed internal API usages.</li>
        <li><b>1.2.0</b> Added actions to increase/decrease/reset zoom level.</li>
        <li><b>1.1.0</b> Added actions for Home, Back, and Forward.</li>
        <li><b>1.0.2</b> Fixed greedy focus.</li>
        <li><b>1.0.1</b> Fixed actions.</li>
        <li><b>1.0.0</b> Initial version.</li>
      </ul>
    ]]>
  </change-notes>

  <vendor url="https://matkoch.dev">Matthias Koch</vendor>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Browser" secondary="true" icon="AllIcons.Toolwindows.WebToolWindow" anchor="right"
                factoryClass="dev.matkoch.ideBrowser.BrowserToolWindowFactory"/>
    <notificationGroup id="IDE Browser Notifications" displayType="BALLOON"/>
    <stepsBeforeRunProvider implementation="dev.matkoch.ideBrowser.LaunchIdeBrowserBeforeRunTaskProvider"/>
  </extensions>

  <actions>
    <action id="dev.matkoch.ideBrowser.BackAction"
            class="dev.matkoch.ideBrowser.BackAction"
            text="Back"
            icon="AllIcons.Actions.Back"
            description="Go back"/>
    <action id="dev.matkoch.ideBrowser.ForwardAction"
            class="dev.matkoch.ideBrowser.ForwardAction"
            text="Forward"
            icon="AllIcons.Actions.Forward"
            description="Go forward"/>
    <action id="dev.matkoch.ideBrowser.HomeAction"
            class="dev.matkoch.ideBrowser.HomeAction"
            text="Home"
            icon="AllIcons.Nodes.HomeFolder"
            description="Go to home URL"/>
    <action id="dev.matkoch.ideBrowser.OpenUrlAction"
            class="dev.matkoch.ideBrowser.OpenUrlAction"
            text="Open URL"
            icon="AllIcons.General.Locate"
            description="Browser: Open URL from Clipboard"/>
    <action id="dev.matkoch.ideBrowser.ReloadPageAction"
            class="dev.matkoch.ideBrowser.ReloadPageAction"
            text="Reload Page"
            icon="AllIcons.Actions.Refresh"
            description="Reload current page"/>
    <action id="dev.matkoch.ideBrowser.OpenDevToolsAction"
            class="dev.matkoch.ideBrowser.OpenDevToolsAction"
            text="Open DevTools"
            icon="AllIcons.Debugger.Console"
            description="Open JCEF DevTools"/>
    <action id="dev.matkoch.ideBrowser.ResetZoomAction"
            class="dev.matkoch.ideBrowser.ResetZoomAction"
            text="Reset Zoom"
            icon="AllIcons.General.ActualZoom"
            description="Reset zoom level">
      <keyboard-shortcut first-keystroke="shift meta 0" keymap="$default"/>
    </action>
    <action id="dev.matkoch.ideBrowser.IncreaseZoomAction"
            class="dev.matkoch.ideBrowser.IncreaseZoomAction"
            text="Increase Zoom"
            icon="AllIcons.General.ZoomIn"
            description="Increase zoom level">
      <keyboard-shortcut first-keystroke="shift meta EQUALS" keymap="$default"/>
      <keyboard-shortcut first-keystroke="shift meta ADD" keymap="$default"/>
    </action>
    <action id="dev.matkoch.ideBrowser.DecreaseZoomAction"
            class="dev.matkoch.ideBrowser.DecreaseZoomAction"
            text="Decrease Zoom"
            icon="AllIcons.General.ZoomOut"
            description="Decrease zoom level">
      <keyboard-shortcut first-keystroke="shift meta MINUS" keymap="$default"/>
      <keyboard-shortcut first-keystroke="shift meta SUBTRACT" keymap="$default"/>
    </action>
  </actions>

</idea-plugin>
